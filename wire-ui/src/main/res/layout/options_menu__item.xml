<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/options_menu_row_item_total_width"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/fl_options_menu_button"
        android:layout_width="@dimen/options_menu_item__width"
        android:layout_height="@dimen/options_menu_item__height"
        android:layout_gravity="center">

        <com.waz.zclient.ui.text.GlyphTextView
            android:id="@+id/gtv__options_menu_button__glyph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/options_menu_item_glyph_text_size"
            />
    </FrameLayout>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__settings_box__item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/options_menu_item_title_height"
        android:layout_marginTop="@dimen/options_menu_item_title_margin_top"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textSize="@dimen/wire__text_size__small"
        app:font="@string/wire__typeface__light"
        />

</LinearLayout>

